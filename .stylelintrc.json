{
  "extends": "stylelint-config-standard",
  "plugins": [
    "stylelint-order"
  ],
  "rules": {
    "order/order": [
      "at-rules",
      "declarations",
      "rules"
    ],
    "order/properties-order": [
      [
        "composes"
      ],
      {
        "unspecified": "bottom"
      }
    ],
    "color-hex-case": "lower",
    "color-named": ["never"],
    "at-rule-no-unknown": [
      true,
      {
        "ignoreAtRules": [
          "extend"
        ]
      }
    ],
    "selector-pseudo-class-no-unknown": [
      true,
      {
        "ignorePseudoClasses": [
          "global"
        ]
      }
    ],
    "property-no-unknown": [
      true,
      {
        "ignoreProperties": [
          "composes"
        ]
      }
    ],
    "rule-empty-line-before": [
      "always-multi-line",
      {
        "except": ["after-single-line-comment"],
        "ignore": ["first-nested"]
      }
    ],
    "comment-empty-line-before": [
      "always",
      {
        "ignore": ["after-comment"]
      }
    ],
    "declaration-no-important": [
      true
    ]
  }
}
